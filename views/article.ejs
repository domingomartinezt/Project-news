<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" type="text/css" href="/semantic/dist/semantic.min.css">
  <link rel="stylesheet" type="text/css" href="/style.css">
  <script
  src="https://code.jquery.com/jquery-3.1.1.min.js"
  integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
  crossorigin="anonymous"></script>
  <script src="/semantic/dist/semantic.min.js"></script>
</head>
<body>
  <!-- Header -->
  <div class="ui middle aligned top grid">
    <div class="sixteen wide red column">
      <div class="ui container">
        <div class="title1">PROJECT</div><div class="title2">NEWS</div>
      </div>
    </div>
  </div>

  <!-- menu -->
  <div class="ui container">
    <div class="ui red secondary pointing menu">
      <a class="item active">
        Coding
      </a>
      <a class="item">
        Hardware
      </a>
      <a class="item">
        Mobile
      </a>
      <div class="right menu">
        <a href="listArticles" class="ui item">
          <i class="options icon"></i>
        </a>
      </div>
    </div>
  </div>

  <!-- Content -->
  <div class="ui container main">
    <div class="ui two columns grid">
      <!-- left content -->
      <div class="sixteen wide column">
        <div class="ui basic segment">
        <div class="thumbs">
          <span class="tDown"><%= article.dataValues.thumbs_down %></span>
          <i class="thumbs outline down link icon" onclick="thumbsDown(<%= article.dataValues.id %>)"></i>
        </div>
        <div class="thumbs">
          <span class="tUp"><%= article.dataValues.thumbs_up %></span>
          <i class="thumbs outline up link icon" onclick="thumbsUp(<%= article.dataValues.id %>)"></i>
        </div>
        <img class="ui medium left floated image" src="<%= article.dataValues.URL_image %>">
        <div class="ui medium header"><%= article.dataValues.title %>
          <div class="sub header">
            <span class="date red"><%= article.dataValues.createdAt.toDateString() %></span>
              by <%= article.dataValues.author.first_name+" "+article.dataValues.author.second_name %>
          </div>
        </div>
        <span><%= article.dataValues.resume %></span>
        <br>
        <br>
        <p><%= article.dataValues.body %></p>
        </div>

      </div>

    </div>

  </div>

  <!-- footer -->
  <div class="ui vertical footer red segment">
    <div class="ui container">
      <div class="ui stackable divided equal height stackable grid">
        <div class="three wide column">
          <h4 class="ui red header">Author</h4>
          <div class="ui link list">
            <a href="#" class="item">Domingo Martinez</a>
          </div>
        </div>
        <div class="three wide column">
          <h4 class="ui red header">Technologies</h4>
          <div class="ui link list">
            <a href="#" class="item">Javascipt</a>
            <a href="#" class="item">Semantic UI</a>
            <a href="#" class="item">JQuery</a>
            <a href="#" class="item">Node JS</a>
            <a href="#" class="item">Postgres</a>
          </div>
        </div>
        <div class="seven wide column">
          <h4 class="ui red header">Features</h4>
          <p class="paragrap gray">This is an API player for the page Free Music Archive, as part of the work assignment for the TPP training program at Queens College.</p>
        </div>
      </div>
    </div>
  </div>

</body>

<script>

function thumbsUp(id){
  $.ajax({
    type: "POST",
    url: "/thumbsUp",
    data: {id: id},
    success: function (val) {
      $('.tUp').innerHTML= val;
    }
  });
}

function thumbsDown(id){
  $.ajax({
    type: "POST",
    url: "/thumbsDown",
    data: {id: id},
    success: function (val) {
      $('.tDpwn').innerHTML= val;
    }
  });
}


</script>

</html>
